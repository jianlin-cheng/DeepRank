#!/bin/bash
#SBATCH -J  DeepRank
#SBATCH -o DeepRank-%j.out
#SBATCH --partition Lewis,hpc5,hpc4
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=1
#SBATCH --mem-per-cpu=10G
#SBATCH --time 2-00:00
mkdir -p SOFTWARE_PATH/test_out/T1019s2_DeepRank/
cd SOFTWARE_PATH/test_out/T1019s2_DeepRank/

source SOFTWARE_PATH/tools/python_virtualenv/bin/activate
export LD_LIBRARY_PATH=SOFTWARE_PATH/tools/DeepQA/libs:$LD_LIBRARY_PATH
export PATH=SOFTWARE_PATH/tools/EMBOSS-6.6.0/bin/:$PATH
export LD_LIBRARY_PATH=SOFTWARE_PATH/tools/EMBOSS-6.6.0/lib/:$LD_LIBRARY_PATH
export PATH=SOFTWARE_PATH/tools/R-3.2.0/bin/:$PATH
export LD_LIBRARY_PATH=SOFTWARE_PATH/tools/rosetta_2014.16.56682_bundle/main/source/build/external/release/linux/2.6/64/x86/gcc/4.4/default/:$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=SOFTWARE_PATH/tools/rosetta_2014.16.56682_bundle/main/source/build/src/release/linux/2.6/64/x86/gcc/4.4/default/:$LD_LIBRARY_PATH

if [[ ! -f "SOFTWARE_PATH/test_out/T1019s2_DeepRank/DeepRank_gdt_prediction.txt" ]];then 
	echo "perl SOFTWARE_PATH/src/scripts/run_DeepRank.pl T1019s2  SOFTWARE_PATH/examples/T1019s2.fasta SOFTWARE_PATH/examples/T1019s2 SOFTWARE_PATH/test_out/T1019s2_DeepRank/\n\n";								
	perl SOFTWARE_PATH/src/scripts/run_DeepRank.pl T1019s2  SOFTWARE_PATH/examples/T1019s2.fasta SOFTWARE_PATH/examples/T1019s2 SOFTWARE_PATH/test_out/T1019s2_DeepRank/    2>&1 | tee  SOFTWARE_PATH/test_out/T1019s2_DeepRank.log
fi

printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T1019s2_DeepRank.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T1019s2_DeepRank/DeepRank_gdt_prediction.txt" ]];then 
	printf "!!!!! Failed to run DeepRank, check the installation <SOFTWARE_PATH/src/>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T1019s2_DeepRank/DeepRank_gdt_prediction.txt\n\n"
fi

printf "Validating the results\n\n";
perl SOFTWARE_PATH/installation/scripts/validate_predictions_final.pl T1019s2 SOFTWARE_PATH/test_out/T1019s2_DeepRank SOFTWARE_PATH/installation/benchmark/T1019s2
 
 