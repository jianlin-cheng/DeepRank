#!/bin/bash
#SBATCH -J  voronota
#SBATCH -o voronota-%j.out
#SBATCH --partition Lewis,hpc5,hpc4
#SBATCH --nodes=1
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=1
#SBATCH --mem-per-cpu=2G
#SBATCH --time 1-00:00

mkdir -p SOFTWARE_PATH/test_out/T0980s1_voronota/
cd SOFTWARE_PATH/test_out/T0980s1_voronota/


touch SOFTWARE_PATH/test_out/T0980s1_voronota.running
if [[ ! -f "SOFTWARE_PATH/test_out/T0980s1_voronota/ALL_scores/feature_voronota.T0980s1" ]];then
	echo "perl SOFTWARE_PATH/src/scripts/run_DeepRank_voronota.pl T0980s1  SOFTWARE_PATH/examples/T0980s1.fasta SOFTWARE_PATH/examples/T0980s1  SOFTWARE_PATH/test_out/T0980s1_voronota/\n\n";								
	perl SOFTWARE_PATH/src/scripts/run_DeepRank_voronota.pl T0980s1  SOFTWARE_PATH/examples/T0980s1.fasta SOFTWARE_PATH/examples/T0980s1  SOFTWARE_PATH/test_out/T0980s1_voronota/ 2>&1 | tee  SOFTWARE_PATH/test_out/T0980s1_voronota.log
fi


printf "\nFinished.."
printf "\nCheck log file <SOFTWARE_PATH/test_out/T0980s1_voronota.log>\n\n"


if [[ ! -f "SOFTWARE_PATH/test_out/T0980s1_voronota/ALL_scores/feature_voronota.T0980s1" ]];then 
	printf "!!!!! Failed to run voronota, check the installation <SOFTWARE_PATH/src/scripts/run_DeepRank_voronota.pl>\n\n"
else
	printf "\nJob successfully completed!"
	printf "\nResults: SOFTWARE_PATH/test_out/T0980s1_voronota/ALL_scores/feature_voronota.T0980s1\n\n"
fi
rm SOFTWARE_PATH/test_out/T0980s1_voronota.running
